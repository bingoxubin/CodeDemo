<!-- Put site-specific property overrides in this file. -->

<configuration>
<!-- 指定NameNode的地址 -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://hadoop11:8020</value>
    </property>

    <!-- 指定hadoop数据的存储目录 -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/opt/module/hadoop3.1.3/data</value>
    </property>

    <!-- 配置HDFS网页登录使用的静态用户为atguigu -->
    <property>
        <name>hadoop.http.staticuser.user</name>
        <value>bingo</value>
    </property>

<property>
    <name>hadoop.proxyuser.bingo.hosts</name>
    <value>*</value>
</property>
<property>
    <name>hadoop.proxyuser.bingo.groups</name>
    <value>*</value>
</property>
<property>
    <name>fs.hdfs.impl.disable.cache</name>
    <value>true</value>
</property>
</configuration>
